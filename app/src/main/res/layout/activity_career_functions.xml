<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_career_functions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umich.mentormatcher.CareerFunctions">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Search"
        android:ems="10"
        android:id="@+id/editTextsearch"
        android:layout_below="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Finance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonfiniance"
        android:layout_alignBaseline="@+id/buttonconsulting"
        android:layout_alignBottom="@+id/buttonconsulting"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonoperations"
        android:layout_alignBaseline="@+id/buttonfiniance"
        android:layout_alignBottom="@+id/buttonfiniance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Product Mgmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonconsulting"
        android:layout_alignRight="@+id/buttonconsulting"
        android:layout_alignEnd="@+id/buttonconsulting"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="25dp"
        android:id="@+id/buttonpm" />

    <Button
        android:text="Marketing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonpm"
        android:layout_alignLeft="@+id/buttonfiniance"
        android:layout_alignStart="@+id/buttonfiniance"
        android:id="@+id/buttonmarketing" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonmarketing"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/buttonplus" />

    <Button
        android:text="Consulting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/buttonconsulting"
        android:layout_below="@+id/editTextsearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
