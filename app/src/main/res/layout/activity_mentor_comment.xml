<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mentor_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umich.mentormatcher.MentorCommentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textViewMentorCommentPrompt" />

    <RadioButton
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMentorCommentPrompt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:id="@+id/radioButtonScore1" />

    <RadioButton
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButtonScore1"
        android:layout_toRightOf="@+id/radioButtonScore1"
        android:layout_toEndOf="@+id/radioButtonScore1"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/radioButtonScore2" />

    <RadioButton
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonScore3"
        android:layout_alignBaseline="@+id/radioButtonScore2"
        android:layout_alignBottom="@+id/radioButtonScore2"
        android:layout_toRightOf="@+id/radioButtonScore2"
        android:layout_toEndOf="@+id/radioButtonScore2"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <RadioButton
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/radioButtonScore4"
        android:layout_alignBaseline="@+id/radioButtonScore3"
        android:layout_alignBottom="@+id/radioButtonScore3"
        android:layout_toRightOf="@+id/radioButtonScore3"
        android:layout_toEndOf="@+id/radioButtonScore3" />

    <RadioButton
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonScore5"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/radioButtonScore4"
        android:layout_alignBottom="@+id/radioButtonScore4"
        android:layout_toRightOf="@+id/radioButtonScore4"
        android:layout_toEndOf="@+id/radioButtonScore4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonScore1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:id="@+id/textView10"
        android:text="Other comments" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp"
        android:id="@+id/editTextMentorComment" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/buttonSendMentorComment"
        android:layout_below="@+id/editTextMentorComment"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
