<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirm_appoint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umich.mentormatcher.ConfirmAppointActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

            <RadioButton
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/radioButtonYes" />

            <RadioButton
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonNo"
                android:layout_alignBaseline="@+id/radioButtonYes"
                android:layout_alignBottom="@+id/radioButtonYes"
                android:layout_toRightOf="@+id/radioButtonYes"
                android:layout_toEndOf="@+id/radioButtonYes"
                android:layout_marginLeft="47dp"
                android:layout_marginStart="47dp" />
    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextConfirmationMsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/buttonSendConfirmation"
        android:layout_below="@+id/editTextConfirmationMsg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Send confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextConfirmationMsg"
        android:layout_alignStart="@+id/editTextConfirmationMsg"
        android:layout_marginTop="47dp"
        android:id="@+id/textViewSendConfirmation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewSendConfirmation"
        android:layout_alignStart="@+id/textViewSendConfirmation"
        android:layout_marginTop="16dp"
        android:id="@+id/textViewMentorPrompt" />
</RelativeLayout>
