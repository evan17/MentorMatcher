<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mentor_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.umich.mentormatcher.MentorRegistration">

    <Button
        android:text="Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:id="@+id/buttonConfirmMentor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextServicesProvided"
        android:layout_above="@+id/buttonConfirmMentor"
        android:layout_alignLeft="@+id/editTextAboutYou"
        android:layout_alignStart="@+id/editTextAboutYou"
        android:layout_marginBottom="93dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextAboutYou"
        android:layout_marginBottom="62dp"
        android:layout_above="@+id/editTextServicesProvided"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="About You"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/editTextAboutYou"
        android:layout_alignLeft="@+id/editTextAboutYou"
        android:layout_alignStart="@+id/editTextAboutYou" />

    <TextView
        android:text="Services Provided"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTextServicesProvided"
        android:layout_alignStart="@+id/editTextServicesProvided" />
</RelativeLayout>
